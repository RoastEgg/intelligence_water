            </if>
            <if test="chlorophylA!=null">
                chlorophylA,
            </if>
            <if test="phycocyanobilin!=null">
                phycocyanobilin,
            </if>
            <if test="hatchOpen!=null">
                hatchOpen,
            </if>
            <if test="waterPenetration!=null">
                waterPenetration,
            </if>
            <if test="voltage!=null">
                voltage,
            </if>
        </trim>
    </sql>
    <sql id="value">
        <!--去掉最后一个,号  -->
        <trim suffixOverrides=",">
            <if test="id!=null">
