            </if>
            <if test="picOrVideo!=null">
                picOrVideo,
            </if>
            <if test="FilePath!=null">
                FilePath,
            </if>
            <if test="salinity!=null">
                salinity,
            </if>
            <if test="tds!=null">
                tds,
            </if>
            <if test="density!=null">
                density,
            </if>
            <if test="doSaturation!=null">
                doSaturation,
            </if>
            <if test="tss!=null">
